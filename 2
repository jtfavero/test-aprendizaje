  /* Estilos para las preguntas y el texto de las opciones de respuesta */
  #estilos-aprendizaje-cuestionario h3,
  #estilos-aprendizaje-cuestionario p,
  #estilos-aprendizaje-cuestionario label {
    color: #ffffff; /* Cambia el color de texto a blanco */
  }
  
  /* Estilos para el texto de las opciones seleccionadas */
  #estilos-aprendizaje-cuestionario input[type="radio"]:checked + label {
    color: #ffffff; /* Cambia el color de texto a blanco */
  }
  
   #boton-enviar {
      margin-top: 20px; /* Agrega un margen superior de 20px */
    }
  
   @media (max-width: 480px) {
  /* Ajusta el tamaño del texto para dispositivos móviles */
  #estilos-aprendizaje-cuestionario h3,
