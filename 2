  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(dibujarGrafico);
   
   function mostrarPreguntas() {
      var aceptarCondiciones = document.getElementById('aceptar-condiciones').checked;
      if (aceptarCondiciones) {
        document.getElementById('condiciones').style.display = 'none';
        document.getElementById('formulario-preguntas').style.display = 'block';
      } else {
        alert('Debes marcar la casilla "Estoy listo para iniciar el test" para poder continuar.');
      }
    }
    
 function consolidarRespuestas(event) {
  event.preventDefault();
  var nombre = document.getElementsByName('nombre')[0].value;
  var organizacion = document.getElementsByName('organizacion')[0].value;
  var respuestasFormulario = new FormData(event.target);
  var respuestas = Array.from(respuestasFormulario.values());

   var contadorEstilos = {
      ACTIVO: 0,
      REFLEXIVO: 0,
      TEORICO: 0,
      PRAGMATICO: 0
    };
    
 respuestas.forEach(function (respuesta) {
        contadorEstilos[respuesta]++;
      });
      
  dibujarGrafico(contadorEstilos);
  enviarRespuestasAFirebase(nombre, organizacion, respuestas, contadorEstilos);
}
function enviarRespuestasAFirebase(nombre, organizacion, respuestas,contadorEstilos) {
  // Obtener una referencia a la base de datos de Firebase
     var database = firebase.database(); 
  database.ref().push({
    nombre: nombre,
    organizacion: organizacion,
    contadorEstilos: contadorEstilos
 })
  .then(function() {
    console.log("Datos enviados correctamente a Firebase Realtime Database");
  })
  .catch(function(error) {
    console.error("Error al enviar los datos a Firebase Realtime Database:", error);
  });
}
 
function dibujarGrafico(contadorEstilos) {
      var data = google.visualization.arrayToDataTable([
        ['Estilo', 'Cantidad'],
        ['Activo', contadorEstilos.ACTIVO],
        ['Reflexivo', contadorEstilos.REFLEXIVO],
        ['Teórico', contadorEstilos.TEORICO],
        ['Pragmático', contadorEstilos.PRAGMATICO]
      ]);

  var options = {
        title: 'Estilos de Aprendizaje',
        is3D: true
      };

      var chart = new google.visualization.PieChart(document.getElementById('chart-container'));
      chart.draw(data, options);
} 

</script>

  
